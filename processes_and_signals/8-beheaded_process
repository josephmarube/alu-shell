#!/usr/bin/env bash
# Get the PID(s) of the process named '7-highlander'
pids=$(pgrep -f "7-highlander")

# Kill all matching processes
if [ -n "$pids" ]; then
    kill -9 "$pids" 2>/dev/null
fi

# Check again if it's still running
if pgrep -f "7-highlander" > /dev/null; then
    echo "./7-highlander is still running"
fi
