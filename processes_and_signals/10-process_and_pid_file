#!/usr/bin/env bash
# Handle signals and PID file management

PID_FILE="/var/run/myscript.pid"
echo "$$" > "$PID_FILE"

trap 'echo "I hate the kill command"' SIGTERM
trap 'echo "Y U no love me?!"' SIGINT
trap 'rm -f "$PID_FILE"; exit' SIGQUIT

while true; do
  echo "To infinity and beyond"
  for i in {1..20}; do
    sleep 0.1
  done
done
