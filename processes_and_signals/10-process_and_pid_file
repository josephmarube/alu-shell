#!/usr/bin/env bash
# PID management and signal handling

PID_FILE="/var/run/myscript.pid"
echo "$$" > "$PID_FILE"

# SIGTERM: print message, cleanup, exit
term_handler() {
  echo "I hate the kill command"
  rm -f "$PID_FILE"
  exit
}

# SIGINT: print message
int_handler() {
  echo "Y U no love me?!"
}

# SIGQUIT: cleanup and exit
quit_handler() {
  rm -f "$PID_FILE"
  exit
}

trap term_handler SIGTERM
trap int_handler SIGINT
trap quit_handler SIGQUIT

while true; do
  echo "To infinity and beyond"
  sleep 2
done
